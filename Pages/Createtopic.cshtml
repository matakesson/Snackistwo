@page "{id:int}"
@model Snackistwo.Pages.CreatetopicModel
@{
    ViewData["Title"] = "Create Topic";
}

@if (Model.MyUser != null)
{
    <div class="container my-5">
        <h2>Create a New Topic</h2>

        <form method="post">
            <input type="hidden" asp-for="Topic.SubCategoryId" />
            <input type="hidden" asp-for="Topic.UserId" />

            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Topic.Title"></label>
                <input asp-for="Topic.Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Topic.Content">Message</label>
                <textarea asp-for="Topic.Content" rows="5" cols="50" class="form-control"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit Topic" class="btn btn-primary" />
            </div>
        </form>
    </div>
}
